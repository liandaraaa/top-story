<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopStoryTextViewHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopStoryTextViewSubHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopStoryTextViewCaption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TopStoryTextViewHeader.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TopStoryTextViewHeader.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TopStoryTextViewSubHeader.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TopStoryTextViewSubHeader.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TopStoryTextViewCaption.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
